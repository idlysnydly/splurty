<!DOCTYPE html>
<html>
  <head>
    <title>Splurty</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

  <header>
    <!-- style="background-image: url( asset_path @photo %>)" -->
    <div class="container-fluid">
      <div class="row">
        <div class="col-3">
          <%= link_to root_path do %>
          <%= image_tag('idlysnydly-logo.png', :alt => 'Logo', class: 'logo') %>
          <% end %>
        </div>
        <div class="col-6 slogan">
          Splurting out unsolicited advice about entrepreneurship since 2016
        </div>
        <div class="col-3 links">
          <%= link_to 'About', '#' %>
          <%= link_to '', :class => 'btn-link', 'data-toggle' => 'modal', 'data-target' => '#myModal' do %>
          <button type="button" class="btn btn-success-invert">
            Contribute
          </button>
          <% end %>
          <!--button type="button" class="btn btn-success-invert" data-toggle="modal" data-target="#myModal">
            Contribute
          </button-->
        </div>
      </div>
    </div>
  </header>

<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="">Contribute a quote.</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= simple_form_for Quote.new do |f| %>
      <div class="modal-body">
          <%= f.input :saying %>
          <%= f.input :author %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit 'Submit', class: 'btn btn-danger' %>
      </div>
      <% end %>
    </div>
  </div>
</div>

  <br class="clear" />

  
    <div class="container">

      <% if flash[:error].present? %>
        <div class="col-10 offset-1 alert alert-danger">
          <%= flash[:error].html_safe %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  

  <footer>
    <div class="container-fluid">
      <div class="row">
        <div class="col-6 text-muted">
          <%= link_to "Next quote, please.", root_path, class: 'btn btn-success next-quote' %>
        </div>
        <div class="col-6 footer-blurb text-muted">
          Proudly coded by <span class="bold all-caps">Mike Snyder</span><br>
          See more stuff I coded at <a href="http://idlysnydly.com">idlysnydly.com</a>
        </div>
      </div>
    </div>

  </footer>
  </body>
</html>